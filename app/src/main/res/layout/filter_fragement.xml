<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="350dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"
                        android:background="@color/white"
                        android:paddingVertical="8dp"
                        android:text="Filtrer les résultats"
                        android:textAlignment="center"
                        android:textColor="@color/tjo"
                        android:textStyle="bold|italic"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:gravity="right"
                android:paddingBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/filter_title_type"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        >

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/in_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/filter_title_secteur"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Secteur"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        >

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/in_secteur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/filter_title_mot"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Mot clé"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        >

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/in_mot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/filter_title_organe"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Orange emetteur"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        >

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/in_organe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="Plage de Dates"
                        android:background="@color/tjo"
                        android:textColor="@color/white"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textAlignment="center"
                        >

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/filter_title_date_debut"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Date début"
                            android:layout_marginRight="10dp"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/tv_date_debut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:textAlignment="center"
                            >

                        </TextView>

                        <ImageView
                            android:id="@+id/btn_date_debut"
                            android:layout_weight="1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/date"
                            ></ImageView>

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/filter_title_date_fin"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Date fin"
                            android:layout_marginRight="10dp"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            >

                        </TextView>

                        <TextView
                            android:id="@+id/tv_date_fin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:textAlignment="center"
                            >

                        </TextView>

                        <ImageView
                            android:id="@+id/btn_date_fin"
                            android:layout_weight="1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/date"
                            ></ImageView>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    >
                    <Button
                        android:id="@+id/submit_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Filter"
                        android:layout_centerInParent="true"
                        android:backgroundTint="@color/tjo"
                        android:textColor="@color/white"
                        app:iconTint="#C53636"
                        ></Button>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>